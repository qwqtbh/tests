-- Global settings to toggle
getgenv().AutoTrainHit = false
getgenv().GodCollision = true

-- 1. Force Fly Collision (Ghost Mode)
task.spawn(function()
    while task.wait() do
        if getgenv().GodCollision then
            local char = game.Players.LocalPlayer.Character
            if char then
                local hrp = char:FindFirstChild("HumanoidRootPart")
                local torso = char:FindFirstChild("Torso") or char:FindFirstChild("UpperTorso")
                if hrp then hrp.CollisionGroup = "Fly" end
                if torso then torso.CollisionGroup = "Fly" end
            end
        end
    end
end)

-- 2. Train Event Spammer (If it gives rewards or triggers events)
task.spawn(function()
    while task.wait(0.5) do
        if getgenv().AutoTrainHit then
            game.ReplicatedStorage.TrainEvent:FireServer("Hit")
        end
    end
end)

-- 3. Grave ESP (Highlighting "Dirt" graves)
for _, v in ipairs(workspace.GraveYard.Graves:GetDescendants()) do
    if v:GetAttribute("Dirt") then
        local b = Instance.new("BoxHandleAdornment")
        b.Size = Vector3.new(4, 4, 4)
        b.AlwaysOnTop = true
        b.ZIndex = 10
        b.Adornee = v
        b.Color3 = Color3.fromRGB(255, 0, 0)
        b.Transparency = 0.5
        b.Parent = v
    end
end

print("Environmental Exploits Loaded.")
