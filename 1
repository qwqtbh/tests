-- Cleaned version for iOS/Delta
getgenv().AutoTrainHit = false
getgenv().GodCollision = true

task.spawn(function()
    while task.wait(1) do
        if getgenv().GodCollision then
            local p = game.Players.LocalPlayer
            local char = p.Character
            if char then
                local hrp = char:FindFirstChild("HumanoidRootPart")
                local torso = char:FindFirstChild("Torso") or char:FindFirstChild("UpperTorso")
                if hrp then hrp.CollisionGroup = "Fly" end
                if torso then torso.CollisionGroup = "Fly" end
            end
        end
    end
end)

print("Script cleaned and loaded.")
